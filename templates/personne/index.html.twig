{% extends 'template.html.twig' %}

{% block blockTitle %}LISTE DES PERSONNES!{% endblock %}

{% block Body %}
    <div class="row">
{% for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ personne.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ personne.name }}{{ personne.firstName }}</h6>
            <p class="card-text">{{ personne.age }}.</p>
            <a href="{{ path('personne.detail',{'id':personne.id}) }}" class="card-link">details</a>
            <a href="{{ path('personne.delete',{'id':personne.id}) }}" class="card-link">Delete</a>
            <a href="{{ path('personne.edit',{'id':personne.id}) }}" class="card-link">Edit</a>


        </div>
    </div>
{% endfor %}
    </div>
    <div class="mt-3"> 
    {% if isPaginated is defined and isPaginated %}
    <nav aria-label="Page navigation example">
  <ul class="pagination">
  {% if page != 1 %}
    <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', { page: page - 1  , nbre:nbre}) }}">Previous</a></li>
    {% endif %}
    {% for i in range(1,nbrepages)%}
    <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', {page:i,nbre:nbre}) }}">{{i}}</a></li>
    {% endfor %}
    {% if page != nbrepages %}
    <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', { page: page + 1 , nbre:nbre}) }}">Next</a></li>
    {% endif %}
  
  </ul>
</nav>
{% endif %}
</div>
{% endblock %}
